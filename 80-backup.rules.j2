KERNEL!="sd*", GOTO="media_label_end"
ENV{ID_TYPE}!="disk", GOTO="media_label_end"

IMPORT{program}="{{ probe_bin_dir }}/{{ probe_bin_name }} %N", ENV{name}="%E{LVM_VG_NAME}"

ENV{name}!="{{ backup_volume_group_name }} ", GOTO="media_label_end"

KERNEL=="sd*", SYMLINK+="usb-storage/%E{name}"

ACTION=="add", RUN+="{{ backup_bin_dir }}/{{ backup_bin_name }} %E{name}"

LABEL="media_label_end"
